@model StudentPortal.Web.Models.Mahasiswa

@{
    ViewData["Title"] = "Tambah Mahasiswa";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Tambah Mahasiswa</h1>
                <p class="mt-2 text-sm text-gray-600">Masukkan informasi mahasiswa baru ke dalam sistem</p>
            </div>
            <a asp-action="Index" 
               class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium text-sm rounded-lg transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Kembali ke Daftar
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Formulir Data Mahasiswa</h3>
            <p class="mt-1 text-sm text-gray-600">Lengkapi semua field yang diperlukan dengan benar</p>
        </div>

        <div class="px-6 py-6">
            <form asp-action="Create" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-md p-4 text-red-600 text-sm hidden" id="validation-summary"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- NIM Field -->
                    <div class="space-y-2">
                        <label asp-for="NIM" class="block text-sm font-medium text-gray-700">
                            @Html.DisplayNameFor(m => m.NIM)
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="NIM" 
                               class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200" 
                               placeholder="Masukkan NIM mahasiswa" />
                        <span asp-validation-for="NIM" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Nama Field -->
                    <div class="space-y-2">
                        <label asp-for="Nama" class="block text-sm font-medium text-gray-700">
                            @Html.DisplayNameFor(m => m.Nama)
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Nama" 
                               class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200" 
                               placeholder="Masukkan nama lengkap" />
                        <span asp-validation-for="Nama" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Jurusan Field -->
                    <div class="space-y-2">
                        <label asp-for="Jurusan" class="block text-sm font-medium text-gray-700">
                            @Html.DisplayNameFor(m => m.Jurusan)
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Jurusan" 
                               class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200" 
                               placeholder="Contoh: Teknik Informatika" />
                        <span asp-validation-for="Jurusan" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Tanggal Lahir Field -->
                    <div class="space-y-2">
                        <label asp-for="TanggalLahir" class="block text-sm font-medium text-gray-700">
                            @Html.DisplayNameFor(m => m.TanggalLahir)
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="TanggalLahir" 
                               type="date"
                               class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200" />
                        <span asp-validation-for="TanggalLahir" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="pt-6 border-t border-gray-200">
                    <div class="flex items-center justify-end space-x-4">
                        <a asp-action="Index" 
                           class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                            Batal
                        </a>
                        <button type="submit" 
                                class="inline-flex items-center px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium text-sm rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            Simpan Data
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Helper Information -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Informasi Penting</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <ul class="list-disc pl-5 space-y-1">
                        <li>Semua field bertanda (*) wajib diisi</li>
                        <li>NIM harus unik dan belum pernah digunakan</li>
                        <li>Pastikan nama ditulis dengan ejaan yang benar</li>
                        <li>Format tanggal akan otomatis disesuaikan sistem</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
