@model StudentPortal.Web.Models.Mahasiswa

@{
    ViewData["Title"] = "Hapus Mahasiswa";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Hapus Mahasiswa</h1>
                <p class="mt-2 text-sm text-gray-600">Apakah Anda yakin ingin menghapus data mahasiswa ini?</p>
            </div>
            <a asp-action="Index" 
               class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium text-sm rounded-lg transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Kembali ke Daftar
            </a>
        </div>
    </div>

    <!-- Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-red-50 border-b border-red-200">
            <h3 class="text-lg font-medium text-red-800">Konfirmasi Penghapusan</h3>
            <p class="mt-1 text-sm text-red-700">Data yang dihapus tidak dapat dikembalikan.</p>
        </div>
        <div class="px-6 py-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.NIM)</dt>
                    <dd class="mt-1 text-gray-900">@Html.DisplayFor(model => model.NIM)</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Nama)</dt>
                    <dd class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Nama)</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Jurusan)</dt>
                    <dd class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Jurusan)</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.TanggalLahir)</dt>
                    <dd class="mt-1 text-gray-900">@Html.DisplayFor(model => model.TanggalLahir)</dd>
                </div>
            </dl>

            <form asp-action="Delete" class="mt-8 flex items-center space-x-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="inline-flex items-center px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-medium text-sm rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Hapus Data
                </button>
                <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200">
                    Batal
                </a>
            </form>
        </div>
    </div>
</div>
